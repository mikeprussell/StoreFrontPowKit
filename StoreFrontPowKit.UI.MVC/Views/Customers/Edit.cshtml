                        </div>
                    </div>

                    <div class="form-group pt-4">
                        <div class="col-md-offset-2 col-md-10">

                            <!-- Save Button -->
                            <button type="submit" value="Save" class="btn btn-primary" id="submitButton">Save</button>
                            |
                            @Html.ActionLink("Back to List", "Index")

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
